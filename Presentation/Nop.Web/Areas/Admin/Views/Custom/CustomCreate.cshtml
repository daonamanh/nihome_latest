@model Nop.Web.Areas.Admin.Models.Custom.CustomTableModel

@{
	ViewData["Title"] = "Create Custom Table";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
	<form asp-action="CustomCreateList" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="Name" class="control-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Description" class="control-label"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="PictureUpload" class="control-label">Upload Picture</label>
			<input asp-for="PictureUpload" type="file" class="form-control" />
			<span asp-validation-for="PictureUpload" class="text-danger"></span>
		</div>

		<!-- Date Picker Field -->
		<div class="form-group">
			<label asp-for="Date" class="control-label">Select Date</label>
			<input asp-for="Date" type="date" class="form-control" />
			<span asp-validation-for="Date" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Save" class="btn btn-primary" />
			<a href="@Url.Action("Custom", "Custom")" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>


